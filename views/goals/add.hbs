{{!--  // google auth  --}}
<h3>Create Goal</h3>
<div class="row">
    <form action="/goals" method="POST" class="col s12">
        <div class="row optional-row">
            <h4 class="optional-label">Optional Input &#x21C9;</h4>

            <!-- New container for right-aligned inputs -->
            <div class="right-aligned-inputs">
                <div class="row">
                    <div class="input-field c-num">
                        <input type="number" id="creationNumber" name="creationNumber" min="1">
                        <label for="creationNumber">Creation Number</label>
                    </div>
                </div>
            
                <div class="row date-row">
                    <div class="date-input-field">
                        <label for="month">Month</label>
                        <select id="month" name="month">
                            <option value="" disabled selected>Month</option>
                            <!-- Month options (1-12) -->
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                            <option value="8">8</option>
                            <option value="9">9</option>
                            <option value="10">10</option>
                            <option value="11">11</option>
                            <option value="12">12</option>
                        </select>
                    </div>

                    <span class="slash">/</span>

                    <div class="date-input-field">
                        <label for="day">Day</label>
                        <select id="day" name="day">
                            <option value="" disabled selected>Day</option>
                            <!-- Day options (1-30) -->
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                        <option value="11">11</option>
                        <option value="12">12</option>
                        <option value="13">13</option>
                        <option value="14">14</option>
                        <option value="15">15</option>
                        <option value="16">16</option>
                        <option value="17">17</option>
                        <option value="18">18</option>
                        <option value="19">19</option>
                        <option value="20">20</option>
                        <option value="21">21</option>
                        <option value="22">22</option>
                        <option value="23">23</option>
                        <option value="24">24</option>
                        <option value="25">25</option>
                        <option value="26">26</option>
                        <option value="27">27</option>
                        <option value="28">28</option>
                        <option value="29">29</option>
                        <option value="30">30</option>
                        </select>
                    </div>

                    <span class="slash">/</span>

                    <div class="input-field date-input-field year">
                        <label for="year">Year</label>
                        <input type="text" id="year" name="year" value="2024">
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <input type="text" id="motivator" name="motivator">
                <label for="motivator">Motivator</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <input type="text" id="desire" name="desire">
                <label for="desire">Desire</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <input type="text" id="belief" name="belief">
                <label for="belief">Belief</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <input type="text" id="knowledge" name="knowledge">
                <label for="knowledge">Knowledge</label>
            </div>
        </div>
    
        <div class="row">
            <div class="input-field">
                <input type="text" id="goal" name="goal">
                <label for="goal">Goal</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h6>Plan</h6>
                <textarea id="plan" name="plan"></textarea>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select id="status" name="status">
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <input type="text" id="action" name="action">
                <label for="action">Action</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h6>Victory</h6>
                <textarea id="victory" name="victory"></textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>